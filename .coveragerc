[run]
source = mlpy
omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */dist-packages/*
    */venv/*
    */.venv/*
    */migrations/*
    */conftest.py
    */setup.py
    */__main__.py

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True
fail_under = 90

exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain about deprecations
    warnings.warn
    
    # Ignore pass statements
    pass

[html]
directory = htmlcov
title = MLPY Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = true